  </section>
</HomeLayout>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem 0;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .bio-section {
    max-width: 600px;
  }

  .greeting {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: normal;
    color: #333;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .name-highlight {
    color: #4299E1;
    font-weight: 600;
  }

  .bio {
    font-size: 1.25rem;
    color: #555;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-weight: 300;
  }

  .bio-secondary {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .profile-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .profile-photo {
    width: 300px;
    height: 300px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .profile-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: #f0f0f0;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: #4299E1;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(66, 153, 225, 0.3);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
    fill: #666;
    transition: fill 0.3s ease;
  }

  .social-link:hover svg {
    fill: white;
  }

  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .bio-section {
      max-width: 100%;
    }

    .greeting {
      font-size: 2rem;
    }

    .bio {
      font-size: 1.125rem;
    }

    .profile-photo {
      width: 200px;
      height: 200px;
    }
  }
</style>
